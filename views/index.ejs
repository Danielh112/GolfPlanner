<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Golf Planner</title>

  <!-- jquery + libaries -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <!--<script src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js'></script> -->
  <script type="text/javascript" src="js/libaries/jquery.easing.1.3.js"></script>
  <!-- Bootstrap + libaries-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <!-- Calendar Library -->
  <link href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.css' rel='stylesheet' />
  <link href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.css' rel='stylesheet' />
  <link href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/timegrid/main.css' rel='stylesheet' />

  <script src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/timegrid/main.js'></script>

  <!-- /public/js/.. -->
  <script type="text/javascript" src="js/calendar.js"></script>
  <!-- /public/css/.. -->
  <link rel="stylesheet" type="text/css" href="/css/stylesheet.css">

</head>

<body>
  <!-- Nav-->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Golf Planner</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active float-right" href="#">Calendar<span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="clients">Clients</a>
      </div>
    </div>
  </nav>

  <!-- Calendar -->
  <div id="calendar"></div>
  <div>
    <button type="button" id="addEventBtn" class="btn btn-primary btn-lg btn-block">Add Event</button>
  </div>

  <div class="modal fade" id="addEventModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Event</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="addEventForm">
            <fieldset>
              <div class="form-group">
                <label for="eventType">Event Type</label>
                <select id="eventType" name="eventType" class="form-control">
                  <option>Lesson</option>
                  <option>Shop</option>
                  <option>Meeting</option>
                </select>
              </div>
              <div class="form-group">
                <label for="fullName">Client</label>
                <input type="String" id="fullName" name="fullName" class="form-control" placeholder="Daniel Miles" required>
              </div>
              <div class="form-group">
                <label for="eventDateInput">Date</label>
                <input type="date" id="eventDateInput" name="eventDateInput" max="3000-12-31" min="1000-01-01" class="form-control">
              </div>
                <div class="form-group">
                  <label for="startTimeInput">Start/End Time</label>
                  <input type="time" class="form-control w-50" id="startTimeInput" name="startTimeInput" value="14:00" required>
                  <input type="time" class="form-control w-50" id="endTimeInput"  name="endTimeInput" value="14:30" required>
                </div>
            </fieldset>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" id="addEventSubmit" class="btn btn-primary">Add Booking</button>
        </div>
      </div>
    </div>
  </div>

</body>

</html>
