            <div id="clientLastLessonDate">Last Lesson Date:<input id="clientLastLessonDateValue" class="form-control"></input></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" id="updateClientSubmit" class="btn btn-primary">Update Client</button>
        </div>
      </div>
    </div>
